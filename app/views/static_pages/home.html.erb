                                    </tr>
                                    <tr>
                                        <td>25</td><td>26</td><td>27</td><td>28</td><td>29</td><td>30</td><td>31</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div> <!-- /.calendar_wp -->

                    </div><!-- /.sidebar-element -->

                </section> <!-- /.span3 [sidebar] -->

                <section id="section_form"class="span4">

                  <article class="element-box" style="min-height: 210px;">
                    <header class="element-top-bar clearfix" style="background-image:none;">
                          <div class="post-tab">
                            <a class="message-info fl" onclick="changeTab(this);">Новое сообщение</a>
                            <!-- <b class="time-info fr">17:30 PM</b> -->
                          </div>
                          <div class="post-tab">
                            <a class="message-info fl" onclick="changeTab(this);">Новый опрос</a>
                            <!-- <b class="time-info fr">17:30 PM</b> -->
                          </div>
                    </header>
                    <%= render 'shared/micropost_form' %>

                  <div class="vote-field">
                    <textarea placeholder="Введите вопрос..." id="vote_content"></textarea>
                    <input type="submit" id="addButtonVote" class="btn btn-large btn-primary btn_micpost" value="Добавить вариант" onclick="addVoteOption()"></input>
                    <input type="submit" id="removeButtonVote" class="btn btn-large btn-primary btn_micpost" value="Удалить вариант" onclick="removeVoteOption()"></input>
                    <input type="text" class="vote-option"></input>
                    <input type="submit" id="acceptVote" value="Опубликовать" class="btn btn-large btn-primary btn_micpost"></input>
                  </div>


                </article>

                </section>

            </div> <!-- /.row -->

        </div> <!-- /main role -->

    </div> <!-- /.container [main] -->

